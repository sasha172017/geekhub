{% extends 'base.html.twig' %}

{% block title %}Favorite Products!{% endblock %}

{% block body %}

        <div class="container">
            <div class="row">
                <div class="col-12">
                    <h1 class="text-center">List Product</h1>
                    <table class="table">
                        <thead class="thead-dark">
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col">Name</th>
                            <th scope="col">Image</th>
                            <th scope="col">Price</th>
                            <th scope="col">Qty</th>
                            <th scope="col">Category</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for product in products %}
                            <tr>
                                <th scope="row">{{ product.name }}</th>
                                <td>{{ product.name }}</td>
                                <td><img src="{{ asset('uploads/images/product/') ~ product.imageName }}" width="100"></td>
                                <td>{{ product.price }}</td>
                                <td>{{ product.qty }}</td>
                                <td>{{ product.getCategory().getName() }}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

{% endblock %}
