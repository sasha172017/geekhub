{% extends 'base.html.twig' %}

{% block title %}Favorite Users!{% endblock %}

{% block body %}

        <div class="container">
            <div class="row">
                <div class="col-12">
                    <h1 class="text-center">Favorite Users</h1>
                    <table class="table">
                        <thead class="thead-dark">
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col">Name</th>
                            <th scope="col">Age</th>
                            <th scope="col">Male</th>
                            <th scope="col">delete</th>

                        </tr>
                        </thead>
                        <tbody>
                        {% for user in users %}
                            <tr>
                                <th scope="row">{{ user.id }}</th>
                                <td>{{ user.name }}</td>
                                <td>{{ user.age }}</td>
                                <td>{{ user.male }}</td>
                                <td><a href="{{ url("userFavoriteUserDelete", {'idUser': id, 'idFavoriteUser': user.id}, false) }}">delete</a></td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

{% endblock %}
